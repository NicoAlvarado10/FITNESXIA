---
import serviceImg from '../assets/service.png'
---

<section class="bg-bg-1 text-white h-full pt-10" id="service">
    <div class="max-w-max-width mx-auto px-4 grid grid-cols-2 items-center gap-8 max-md:grid-cols-1">
        <div class="pb-8">
            <h2 class="font-semibold text-4xl service-title">Why Should People Choose Fitnesxia Services</h2>
            <div class="mb-4 mt-6 service-item">
                <h3 class="font-semibold flex gap-2 items-center"><i class="ri-checkbox-circle-fill font-normal text-xl text-secondary"></i>Personal Training</h3>
                <p class="text-extralight mt-2">Get customized workout plans tailored to your fitness goals with one-on-one guidance from our professional trainers.</p>
            </div>
            <div class="my-4 service-item">
                <h3 class="font-semibold flex gap-2 items-center"><i class="ri-checkbox-circle-fill font-normal text-xl text-secondary"></i>Expert Trainer</h3>
                <p class="text-extralight mt-2">Train with highly qualified and experienced fitness experts who will motivate and support you every step of the way.</p>
            </div>
            <div class="mt-4 mb-6 service-item">
                <h3 class="font-semibold flex gap-2 items-center"><i class="ri-checkbox-circle-fill font-normal text-xl text-secondary"></i>Flexible Timing</h3>
                <p class="text-extralight mt-2">Enjoy the convenience of workout sessions that fit your schedule, making it easier to stay committed to your fitness journey.</p>
            </div>
            <a  class="btn service-cta transition duration-150 hover:bg-[#ff242fc4] hover:scale-105 bg-primary" href="#">Join Today</a>
        </div>
        <div class="mask-b-from-96 ">
            <img class=" w-8/12 mx-auto max-md:w-6/12 max-lg:w-full" src={serviceImg.src} alt="service-image">
        </div>
    </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }
</style>

<script type="module">
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const section = entry.target;
          // Todos los elementos a animar dentro del section
          const elements = section.querySelectorAll('.service-title, .service-item, .service-cta , img');
          elements.forEach((el, i) => {
            el.style.animationDelay = `${i * 0.2}s`;
            el.classList.add('animate');
          });
          observer.unobserve(section);
        }
      });
    },
    { threshold: 0.1 }
  );

  const programsSection = document.querySelector('#service');
  if (programsSection) {
    observer.observe(programsSection);
  }
</script>

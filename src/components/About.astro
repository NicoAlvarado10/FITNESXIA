---
import aboutImg from '../assets/about.jpg'


---
<section class="bg-bg-1 py-20 text-white" id="about">
  <div class="max-w-max-width mx-auto grid grid-cols-2 px-4 gap-8 max-md:grid-cols-1">
    <div><img class="rounded-2xl mx-auto shadow-2xl object-cover" src={aboutImg.src} alt="about-image" /></div>
    <div>
      <h2 class="about-title max-md:title text-4xl font-semibold my-4 text-white">
        Get Ready To Reach Your Fitness Goals
      </h2>
      <p class="about-text text-extralight my-4 leading-8">
        At FITNESXIA, we are committed to helping you achieve your fitness goals with expert guidance, personalized workouts, and a motivating environment. Whether you aim to build strength, improve endurance, or stay active, we provide the right support and training to keep you on track.
      </p>
      <p class="about-text2 text-extralight mt-4 leading-8 mb-6">
        Start your journey today and transform your health with the perfect exercise routine!
      </p>
      <a class="bg-primary about-cta btn transition duration-150 hover:bg-[#ff242fc4] hover:scale-105 text-white" href="#">
        Free Trial Today
      </a>
    </div>
  </div>
</section>


<style>
    @keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Clase para animar */
.animate {
  animation: fadeInUp 0.6s ease forwards;
  opacity: 0; /* para que empiece invisible */
}
</style>
<script type ="module">
 const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const section = entry.target;
        const elements = section.querySelectorAll('.about-title, .about-text, .about-text2, .about-cta, img');
        elements.forEach((el, i) => {
          el.style.animationDelay = `${i * 0.3}s`;
          el.classList.add('animate');
        });
        observer.unobserve(section);
      }
    });
  }, { threshold: 0.1 });

  const aboutSection = document.querySelector('#about');
  if (aboutSection) {
    observer.observe(aboutSection);
  }

</script>